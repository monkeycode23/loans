{
    "appId": "com.presta.app",
    "productName": "PrestaApp",
    "publish": [{
      "provider": "github",
      "owner": "monkeycode23",
      "repo": "loans"
    }],
    
    "directories": {
      "output": "build"
    },
    "files": [
        "dist/**/*",
        "src/main/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "test.db",
        "to": "test.db"
      }
    ],
    "win": {
      "target": "portable",
      "sign": false
    },
    "asar": true,
    "asarUnpack": [
      "node_modules/better-sqlite3/**/*"
    ],
    "removePackageScripts": true,
    "buildDependenciesFromSource": false
  }